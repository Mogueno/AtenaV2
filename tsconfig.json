{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2017", "dom", "ESNext"],
    "noEmitOnError": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": ["./typings/*.d.ts", "./**/*.tsx", "./**/*.ts"],
  "exclude": ["node_modules"]
}
